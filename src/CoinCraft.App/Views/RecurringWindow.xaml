<Window x:Class="CoinCraft.App.Views.RecurringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recorrentes - CoinCraft" MinWidth="1024" MinHeight="768" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Header + Actions -->
            <RowDefinition Height="Auto"/> <!-- Filters -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- 0. Menu -->
        <Border Grid.Row="0" Margin="0,0,0,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Início" Click="OnGoDashboard" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Lançamentos" Click="OnGoTransactions" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Contas" Click="OnGoAccounts" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Categorias" Click="OnGoCategories" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Recorrentes" Click="OnGoRecurring" Style="{DynamicResource MenuButtonStyle}" Foreground="{DynamicResource PrimaryBrush}" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button Content="Importar" Click="OnGoImport" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Configurações" Click="OnGoSettings" Style="{DynamicResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- 1. Header + Actions -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Lançamentos Recorrentes" Style="{DynamicResource HeaderTextStyle}" VerticalAlignment="Center" Margin="0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="+ Novo Recorrente" Click="OnAddClick" Style="{DynamicResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Atualizar" Click="OnRefreshClick" Style="{DynamicResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- 2. Filters -->
        <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Padding="16" Margin="0,0,0,20">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,16,10">
                    <TextBlock Text="Conta:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <ComboBox x:Name="AccountFilter" Width="150" DisplayMemberPath="Nome" SelectedValuePath="Id" Padding="6"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,10">
                    <TextBlock Text="Categoria:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CategoryFilter" Width="150" DisplayMemberPath="Nome" SelectedValuePath="Id" Padding="6"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,10">
                    <TextBlock Text="Frequência:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <ComboBox x:Name="FrequencyFilter" Width="120" Padding="6"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,10">
                    <TextBlock Text="Nome:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <TextBox x:Name="NameFilter" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,10">
                    <TextBlock Text="Próx. De:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <DatePicker x:Name="FromPicker" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,10">
                    <TextBlock Text="Até:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <DatePicker x:Name="ToPicker" Width="120"/>
                </StackPanel>

                <Button Content="Aplicar" Click="OnApplyFilters" Style="{DynamicResource PrimaryButtonStyle}" Padding="20,6" FontSize="13" Margin="0,0,0,10"/>
            </WrapPanel>
        </Border>

        <!-- 3. DataGrid -->
        <Border Grid.Row="3" Style="{DynamicResource CardStyle}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                    <Button Content="Editar Selecionado" Click="OnEditClick" Style="{DynamicResource SecondaryButtonStyle}" Padding="10,5" FontSize="12" Margin="0,0,8,0"/>
                    <Button Content="Excluir Selecionado" Click="OnDeleteClick" Style="{DynamicResource SecondaryButtonStyle}" Padding="10,5" FontSize="12" BorderBrush="{DynamicResource DangerBrush}" Foreground="{DynamicResource DangerBrush}"/>
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Items}"
                          SelectedItem="{Binding Selected, Mode=TwoWay}"
                          BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Frequência" Binding="{Binding Frequencia}" Width="100"/>
                        <DataGridTextColumn Header="Próxima Execução" Binding="{Binding NextRunDate, StringFormat=d}" Width="140"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C}" Width="120" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Conta" Binding="{Binding AccountId}" Width="100"/>
                        <DataGridTextColumn Header="Categoria" Binding="{Binding CategoryId}" Width="100"/>
                        <DataGridTextColumn Header="Auto" Binding="{Binding AutoLancamento}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>