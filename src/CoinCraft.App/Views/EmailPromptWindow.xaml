<Window x:Class="CoinCraft.App.Views.EmailPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ativação CoinCraft" Height="250" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Bem-vindo ao CoinCraft!" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBlock Text="Por favor, insira o e-mail utilizado na compra para validar sua licença." TextWrapping="Wrap" Margin="0,0,0,20" TextAlignment="Center"/>
            
            <TextBox Name="EmailTextBox" Height="30" Margin="0,0,0,20" VerticalContentAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Verificar Licença" Width="120" Height="30" Click="VerifyButton_Click" Margin="0,0,10,0"/>
                <Button Content="Sair" Width="100" Height="30" Click="CancelButton_Click"/>
            </StackPanel>
            
            <TextBlock Name="StatusText" Foreground="Red" Margin="0,10,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
