<Window x:Class="CoinCraft.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurações - CoinCraft" MinWidth="1024" MinHeight="768" WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Content -->
            <RowDefinition Height="*"/>    <!-- Spacer -->
        </Grid.RowDefinitions>

        <!-- 0. Menu -->
        <Border Grid.Row="0" Margin="0,0,0,20" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Início" Click="OnGoDashboard" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Lançamentos" Click="OnGoTransactions" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Contas" Click="OnGoAccounts" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Categorias" Click="OnGoCategories" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Recorrentes" Click="OnGoRecurring" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Importar" Click="OnGoImport" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Configurações" Click="OnGoSettings" Style="{StaticResource MenuButtonStyle}" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- 1. Header -->
        <TextBlock Grid.Row="1" Text="Configurações do Sistema" Style="{StaticResource HeaderTextStyle}"/>

        <!-- 2. Content -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="30" Width="600" HorizontalAlignment="Left" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Preferências Gerais" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tema:" VerticalAlignment="Center" Margin="0,0,0,16"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" SelectedValue="{Binding Tema}" SelectedValuePath="Content" Margin="0,0,0,16">
                        <ComboBoxItem>claro</ComboBoxItem>
                        <ComboBoxItem>escuro</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Moeda:" VerticalAlignment="Center" Margin="0,0,0,16"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" SelectedValue="{Binding Moeda}" SelectedValuePath="Content" Margin="0,0,0,16">
                        <ComboBoxItem>BRL</ComboBoxItem>
                        <ComboBoxItem>USD</ComboBoxItem>
                        <ComboBoxItem>EUR</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Tela Inicial:" VerticalAlignment="Center" Margin="0,0,0,16"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" SelectedValue="{Binding TelaInicial}" SelectedValuePath="Content" Margin="0,0,0,16">
                        <ComboBoxItem>dashboard</ComboBoxItem>
                        <ComboBoxItem>lancamentos</ComboBoxItem>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Salvar Alterações" Click="OnSaveClick" Style="{StaticResource PrimaryButtonStyle}" Width="160"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <TextBlock Grid.Row="3" Text="Versão 1.0.1" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>