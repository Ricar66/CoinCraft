<Window x:Class="CoinCraft.App.Views.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Categorias - CoinCraft" MinWidth="1024" MinHeight="768" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Header + Actions -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- 0. Menu -->
        <Border Grid.Row="0" Margin="0,0,0,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Início" Click="OnGoDashboard" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Lançamentos" Click="OnGoTransactions" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Contas" Click="OnGoAccounts" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Categorias" Click="OnGoCategories" Style="{DynamicResource MenuButtonStyle}" Foreground="{DynamicResource PrimaryBrush}" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button Content="Recorrentes" Click="OnGoRecurring" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Importar" Click="OnGoImport" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Configurações" Click="OnGoSettings" Style="{DynamicResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- 1. Header + Actions -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Categorias" Style="{DynamicResource HeaderTextStyle}" VerticalAlignment="Center" Margin="0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="+ Nova Categoria" Click="OnAddClick" Style="{DynamicResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Atualizar" Click="OnRefreshClick" Style="{DynamicResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- 2. DataGrid -->
        <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                    <Button Content="Editar Selecionada" Click="OnEditClick" Style="{DynamicResource SecondaryButtonStyle}" Padding="10,5" FontSize="12" Margin="0,0,8,0"/>
                    <Button Content="Excluir Selecionada" Click="OnDeleteClick" Style="{DynamicResource SecondaryButtonStyle}" Padding="10,5" FontSize="12" BorderBrush="{DynamicResource DangerBrush}" Foreground="{DynamicResource DangerBrush}"/>
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding Selected, Mode=TwoWay}"
                          BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Cor" Binding="{Binding CorHex}" Width="120"/>
                        <DataGridTextColumn Header="Ícone" Binding="{Binding Icone}" Width="120"/>
                        <DataGridTextColumn Header="Subcategoria de" Binding="{Binding ParentCategoryId}" Width="150"/>
                        <DataGridTextColumn Header="Limite Mensal" Binding="{Binding LimiteMensal, StringFormat=C}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>