<Window x:Class="CoinCraft.App.Views.AccountEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Conta" Height="450" Width="520" WindowStartupLocation="CenterOwner"
        Background="{StaticResource AppBackgroundBrush}" ResizeMode="NoResize">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dados da Conta" Style="{StaticResource HeaderTextStyle}"/>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="24">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Nome" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox x:Name="NomeBox" Grid.Column="1" Margin="0,0,0,16"/>

                    <TextBlock Text="Tipo" Grid.Row="1" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="TipoCombo" Grid.Row="1" Grid.Column="1" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Saldo Inicial" Grid.Row="2" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox x:Name="SaldoBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,16"/>

                    <TextBlock Text="Status" Grid.Row="3" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <CheckBox x:Name="AtivaCheck" Grid.Row="3" Grid.Column="1" Content="Conta Ativa" Margin="0,0,0,16"/>

                    <TextBlock Text="Cor" Grid.Row="4" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,16">
                        <TextBox x:Name="CorBox" Margin="0,0,0,8"/>
                        <ListBox ItemsSource="{Binding AvailableColors}" SelectionChanged="OnColorSelected" BorderThickness="0" Background="Transparent">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="24" Height="24" Margin="4" Fill="{Binding}" StrokeThickness="1" Stroke="#DDDDDD" Cursor="Hand"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <TextBlock Text="Ãcone" Grid.Row="5" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox x:Name="IconeBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,16"/>

                    <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Content="Cancelar" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,12,0"/>
                        <Button Content="Salvar" Click="OnSaveClick" IsDefault="True" Style="{StaticResource PrimaryButtonStyle}" Width="100"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
