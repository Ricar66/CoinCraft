<Window x:Class="CoinCraft.App.Views.AccountsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contas - CoinCraft" MinWidth="1024" MinHeight="768" WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Header + Actions -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- 0. Menu -->
        <Border Grid.Row="0" Margin="0,0,0,20" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Início" Click="OnGoDashboard" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Lançamentos" Click="OnGoTransactions" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Contas" Click="OnGoAccounts" Style="{StaticResource MenuButtonStyle}" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button Content="Categorias" Click="OnGoCategories" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Recorrentes" Click="OnGoRecurring" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Importar" Click="OnGoImport" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Configurações" Click="OnGoSettings" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- 1. Header + Actions -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Minhas Contas" Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center" Margin="0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="+ Nova Conta" Click="OnAddClick" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Atualizar" Click="OnRefreshClick" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- 2. DataGrid -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                    <Button Content="Editar Selecionada" Click="OnEditClick" Style="{StaticResource SecondaryButtonStyle}" Padding="10,5" FontSize="12" Margin="0,0,8,0"/>
                    <Button Content="Excluir Selecionada" Click="OnDeleteClick" Style="{StaticResource SecondaryButtonStyle}" Padding="10,5" FontSize="12" BorderBrush="{StaticResource DangerBrush}" Foreground="{StaticResource DangerBrush}"/>
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Accounts}"
                          SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
                          BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="150"/>
                        <DataGridTextColumn Header="Saldo Inicial" Binding="{Binding SaldoInicial, StringFormat=C}" Width="150"/>
                        <DataGridCheckBoxColumn Header="Ativa" Binding="{Binding Ativa}" Width="80"/>
                        <DataGridTextColumn Header="Cor" Binding="{Binding CorHex}" Width="100"/>
                        <DataGridTextColumn Header="Ícone" Binding="{Binding Icone}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>