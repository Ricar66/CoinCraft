<Window x:Class="CoinCraft.App.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Licença" Height="320" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="ID do Computador:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="{Binding HardwareId}" VerticalAlignment="Center"/>
                <Button Content="Copiar" Command="{Binding CopyIdCommand}" Width="80" Margin="8,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Chave de licença:" FontWeight="Bold" Margin="0,12,0,0"/>
            <TextBox Text="{Binding LicenseKey, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Cole sua chave de licença aqui..."
                     Margin="0,4,0,0" Height="100" AcceptsReturn="True" TextWrapping="Wrap"
                     Background="#FFFFFF" Foreground="#000000"
                     BorderBrush="{DynamicResource AccentBrush}" BorderThickness="2"/>

            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <Button Content="Ativar" Command="{Binding ActivateCommand}" Width="120"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" Foreground="DarkRed" Margin="0,12,0,0"/>

            <Separator Margin="0,12,0,12"/>
            <TextBlock Text="Status atual:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="{Binding CurrentStatus}"/>
                <TextBlock Text=" • Restantes:" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding RemainingInstalls}"/>
            </StackPanel>

            <TextBlock Text="Transferir licença para fingerprint:" FontWeight="Bold" Margin="0,12,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBox Text="{Binding TransferTarget, UpdateSourceTrigger=PropertyChanged}" Width="320"/>
                <Button Content="Transferir" Command="{Binding TransferCommand}" Width="120" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
