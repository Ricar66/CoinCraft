<Window x:Class="CoinCraft.App.Views.RecurringEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Recorrente" Height="600" Width="640" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundBrush}" ResizeMode="NoResize">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Lançamento Recorrente" Style="{DynamicResource HeaderTextStyle}"/>

        <Border Grid.Row="1" Style="{DynamicResource CardStyle}" Padding="24">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Nome" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBox x:Name="NomeBox" Grid.Column="1" Margin="0,0,0,16"/>

                    <TextBlock Text="Frequência" Grid.Row="1" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="FrequenciaCombo" Grid.Row="1" Grid.Column="1" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Início" Grid.Row="2" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <DatePicker x:Name="InicioPicker" Grid.Row="2" Grid.Column="1" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Término (opcional)" Grid.Row="3" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <DatePicker x:Name="FimPicker" Grid.Row="3" Grid.Column="1" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Dia da Semana (0=Dom)" Grid.Row="4" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBox x:Name="DiaSemanaBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,16"/>

                    <TextBlock Text="Dia do Mês (1..31)" Grid.Row="5" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBox x:Name="DiaMesBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,16"/>

                    <CheckBox x:Name="AutoCheck" Grid.Row="6" Grid.Column="1" Content="Lançar automaticamente" Margin="0,0,0,16"/>

                    <TextBlock Text="Tipo" Grid.Row="7" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="TipoCombo" Grid.Row="7" Grid.Column="1" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Valor" Grid.Row="8" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBox x:Name="ValorBox" Grid.Row="8" Grid.Column="1" Margin="0,0,0,16"/>

                    <TextBlock Text="Conta" Grid.Row="9" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="ContaCombo" Grid.Row="9" Grid.Column="1" Margin="0,0,0,16" DisplayMemberPath="Nome" SelectedValuePath="Id" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Categoria" Grid.Row="10" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="CategoriaCombo" Grid.Row="10" Grid.Column="1" Margin="0,0,0,16" DisplayMemberPath="Nome" SelectedValuePath="Id" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Descrição" Grid.Row="11" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBox x:Name="DescricaoBox" Grid.Row="11" Grid.Column="1" Margin="0,0,0,16"/>

                    <TextBlock Text="Conta Destino" Grid.Row="12" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="ContaDestinoCombo" Grid.Row="12" Grid.Column="1" Margin="0,0,0,16" DisplayMemberPath="Nome" SelectedValuePath="Id" HorizontalAlignment="Stretch"/>

                    <StackPanel Grid.Row="13" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Content="Cancelar" IsCancel="True" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,12,0"/>
                        <Button Content="Salvar" IsDefault="True" Click="OnSaveClick" Style="{DynamicResource PrimaryButtonStyle}" Width="100"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>