<Window x:Class="CoinCraft.App.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Licença - CoinCraft" Height="400" Width="550" WindowStartupLocation="CenterOwner"
        Background="{StaticResource AppBackgroundBrush}" ResizeMode="NoResize">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gerenciamento de Licença" Style="{StaticResource HeaderTextStyle}"/>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="24">
            <StackPanel>
                <TextBlock Text="ID do Computador" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding HardwareId}" IsReadOnly="True" VerticalContentAlignment="Center"/>
                    <Button Grid.Column="1" Content="Copiar" Command="{Binding CopyIdCommand}" Style="{StaticResource SecondaryButtonStyle}" Padding="12,6" Margin="8,0,0,0"/>
                </Grid>

                <TextBlock Text="Chave de Licença" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                <TextBox Text="{Binding LicenseKey, UpdateSourceTrigger=PropertyChanged}" 
                         Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalContentAlignment="Top" Margin="0,0,0,16"/>

                <Button Content="Ativar Licença" Command="{Binding ActivateCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Right" Width="150"/>

                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource DangerBrush}" Margin="0,12,0,0" TextWrapping="Wrap"/>

                <Separator Margin="0,16" Background="{StaticResource BorderBrush}"/>

                <TextBlock Text="Transferência (Opcional)" Style="{StaticResource SectionHeaderStyle}" FontSize="14" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding TransferTarget, UpdateSourceTrigger=PropertyChanged}" Tag="ID de destino..."/>
                    <Button Grid.Column="1" Content="Transferir" Command="{Binding TransferCommand}" Style="{StaticResource SecondaryButtonStyle}" Padding="12,6" Margin="8,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
