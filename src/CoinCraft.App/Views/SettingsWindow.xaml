<Window x:Class="CoinCraft.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurações" MinWidth="420" MinHeight="260" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundBrush}" Foreground="{DynamicResource AppForegroundBrush}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Tema"/>
            <ComboBox SelectedValue="{Binding Tema}" SelectedValuePath="Content" Margin="0,4,0,12" HorizontalAlignment="Stretch">
                <ComboBoxItem>claro</ComboBoxItem>
                <ComboBoxItem>escuro</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Moeda"/>
            <ComboBox SelectedValue="{Binding Moeda}" SelectedValuePath="Content" Margin="0,4,0,12" HorizontalAlignment="Stretch">
                <ComboBoxItem>BRL</ComboBoxItem>
                <ComboBoxItem>USD</ComboBoxItem>
                <ComboBoxItem>EUR</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Tela inicial"/>
            <ComboBox SelectedValue="{Binding TelaInicial}" SelectedValuePath="Content" Margin="0,4,0,12" HorizontalAlignment="Stretch">
                <ComboBoxItem>dashboard</ComboBoxItem>
                <ComboBoxItem>lancamentos</ComboBoxItem>
            </ComboBox>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salvar" Width="90" Margin="0,0,8,0" Click="OnSaveClick"/>
            <Button Content="Fechar" Width="90" Click="OnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
