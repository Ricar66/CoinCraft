<Window x:Class="CoinCraft.App.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Dashboard" Height="600" Width="1024" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundBrush}" Foreground="{DynamicResource AppForegroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Paleta e estilos básicos -->
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F7F7F8"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3F51B5"/>
        <SolidColorBrush x:Key="SuccessLightBrush" Color="#E8F5E9"/>
        <SolidColorBrush x:Key="DangerLightBrush" Color="#FFEBEE"/>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,12,8"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho e filtros -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,16">
            <TextBlock Text="Dashboard" FontSize="22" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" IsEnabled="{Binding CanApply}">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,0,8,0"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Período:" VerticalAlignment="Center"/>
            <TextBlock Text="De" VerticalAlignment="Center"/>
            <DatePicker x:Name="DashFromPicker"/>
            <TextBlock Text="Até" VerticalAlignment="Center"/>
            <DatePicker x:Name="DashToPicker"/>
            <Button Content="Aplicar" Click="OnApplyDashFilters" IsEnabled="{Binding CanApply}"/>
            <ProgressBar Width="140" Height="16" IsIndeterminate="True"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>
        </StackPanel>

        <!-- Cards de destaque -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource CardBorder}" Background="{StaticResource SuccessLightBrush}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Receitas (mês)" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalReceitas}" FontSize="22"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource CardBorder}" Background="{StaticResource DangerLightBrush}">
                <StackPanel>
                    <TextBlock Text="Despesas (mês)" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalDespesas}" FontSize="22"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Linha 2: comparação -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,16,0,0">
            <TextBlock Text="Receitas vs Despesas" Style="{StaticResource SectionHeaderText}"/>
            <!-- Barra horizontal proporcional (sem moldura) -->
            <Grid x:Name="ComparisonHost" Height="24" Margin="0,4,0,0"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Despesas por Categoria (mês)">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ListView ItemsSource="{Binding DespesasPorCategoria}" Width="300">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Categoria" DisplayMemberBinding="{Binding Name}" Width="160"/>
                                <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Border Grid.Column="1" Margin="12,0,0,0" Style="{StaticResource CardBorder}">
                        <Grid x:Name="PieHost"/>
                    </Border>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Saldos por Conta">
                <DataGrid ItemsSource="{Binding AccountBalances}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Conta" Binding="{Binding AccountName}" Width="*"/>
                        <DataGridTextColumn Header="Saldo" Binding="{Binding Balance}" Width="160"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Últimos Lançamentos">
                <DataGrid ItemsSource="{Binding RecentTransactions}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="120"/>
                        <DataGridTextColumn Header="Conta" Binding="{Binding AccountName}" Width="*"/>
                        <DataGridTextColumn Header="Categoria" Binding="{Binding CategoryName}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Metas do mês">
                <DataGrid ItemsSource="{Binding GoalsProgress}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Categoria" Binding="{Binding CategoryName}" Width="*"/>
                        <DataGridTextColumn Header="Limite" Binding="{Binding Limit}" Width="120"/>
                        <DataGridTextColumn Header="Gasto" Binding="{Binding Spent}" Width="120"/>
                        <DataGridTextColumn Header="% Usado" Binding="{Binding Percent, StringFormat=P0}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <GroupBox Grid.Row="5" Header="Patrimônio Líquido" Margin="0,16,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Período:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="NetWorthPeriodCombo" Width="80" SelectedIndex="1" SelectionChanged="OnNetWorthPeriodChanged">
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="24"/>
                    </ComboBox>
                </StackPanel>
                <Border Style="{StaticResource CardBorder}">
                    <Grid x:Name="NetWorthHost" Height="140"/>
                </Border>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>