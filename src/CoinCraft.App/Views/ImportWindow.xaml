<Window x:Class="CoinCraft.App.Views.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importar - CoinCraft" MinWidth="1024" MinHeight="768" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Controls -->
            <RowDefinition Height="*"/>    <!-- Preview -->
        </Grid.RowDefinitions>

        <!-- 0. Menu -->
        <Border Grid.Row="0" Margin="0,0,0,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Início" Click="OnGoDashboard" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Lançamentos" Click="OnGoTransactions" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Contas" Click="OnGoAccounts" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Categorias" Click="OnGoCategories" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Recorrentes" Click="OnGoRecurring" Style="{DynamicResource MenuButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Importar" Click="OnGoImport" Style="{DynamicResource MenuButtonStyle}" Foreground="{DynamicResource PrimaryBrush}" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button Content="Configurações" Click="OnGoSettings" Style="{DynamicResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- 1. Header -->
        <TextBlock Grid.Row="1" Text="Importar Lançamentos (CSV/OFX)" Style="{DynamicResource HeaderTextStyle}"/>

        <!-- 2. Controls -->
        <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="Selecionar arquivo..." Click="OnSelectFile" Style="{DynamicResource PrimaryButtonStyle}" Width="180"/>
                    <TextBlock x:Name="FilePathText" VerticalAlignment="Center" Margin="16,0,0,0" FontStyle="Italic" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <Separator Margin="0,0,0,16" Background="{DynamicResource BorderBrush}"/>

                <WrapPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <StackPanel Margin="0,0,20,10">
                        <TextBlock Text="Conta padrão:" Margin="0,0,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="DefaultAccountCombo" Width="200" DisplayMemberPath="Nome" SelectedValuePath="Id"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,20,10">
                        <TextBlock Text="Categoria padrão:" Margin="0,0,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="DefaultCategoryCombo" Width="200" DisplayMemberPath="Nome" SelectedValuePath="Id"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,20,10">
                        <TextBlock Text="Tipo padrão:" Margin="0,0,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="DefaultTipoCombo" Width="150"/>
                    </StackPanel>
                </WrapPanel>

                <!-- Mapeamento (CSV) -->
                <GroupBox Header="Mapeamento de Colunas (CSV)" x:Name="MappingGroup" Visibility="Collapsed" BorderBrush="{DynamicResource BorderBrush}" Margin="0,0,0,16">
                    <WrapPanel Margin="10">
                        <StackPanel Margin="0,0,16,10">
                            <TextBlock Text="Data"/>
                            <ComboBox x:Name="MapDataCombo" Width="140"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,16,10">
                            <TextBlock Text="Descrição"/>
                            <ComboBox x:Name="MapDescricaoCombo" Width="140"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,16,10">
                            <TextBlock Text="Valor"/>
                            <ComboBox x:Name="MapValorCombo" Width="140"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,16,10">
                            <TextBlock Text="Tipo"/>
                            <ComboBox x:Name="MapTipoCombo" Width="140"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,16,10">
                            <TextBlock Text="Conta (opcional)"/>
                            <ComboBox x:Name="MapContaCombo" Width="140"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,16,10">
                            <TextBlock Text="Categoria (opcional)"/>
                            <ComboBox x:Name="MapCategoriaCombo" Width="140"/>
                        </StackPanel>
                        <Button Content="Aplicar Mapeamento" Click="OnApplyMappingClick" Style="{DynamicResource SecondaryButtonStyle}" VerticalAlignment="Bottom"/>
                    </WrapPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Processar e Importar" Click="OnImportClick" Style="{DynamicResource PrimaryButtonStyle}" Width="200"/>
                    <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="16,0,0,0" FontWeight="Medium"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 3. Preview -->
        <Border Grid.Row="3" Style="{DynamicResource CardStyle}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Pré-visualização" FontWeight="SemiBold" Margin="16"/>
                
                <DataGrid Grid.Row="1" x:Name="PreviewGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=d}" Width="120"/>
                        <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C}" Width="120"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                        <DataGridTextColumn Header="Conta" Binding="{Binding AccountName}" Width="150"/>
                        <DataGridTextColumn Header="Categoria" Binding="{Binding CategoryName}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>